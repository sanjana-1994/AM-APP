<%= form_tag(search_path, method: :get) do %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search' %>
<% end %>
<div style="text-align: center; margin-top: 10px;">
<% @doctors.each do |d| %>
<br>
<div style="border-style: solid;">
<div style="display: inline-block; vertical-align: top;">
NAME: <%= d.name %><br>
DOCTOR TYPE: <%= d.doctor_type %><br>
SPECIALIZATION: <%= d.specialization %><br>
QUALIFICATION: <%= d.qualification %><br>
YEARS OF EXP: <%= d.years_of_exp %><br>
RATING: <%= d.rating %><br>
TOTAL RATINGS: <%= d.total_ratings %><br>
</div>
<div style="display: inline-block; vertical-align: top; margin-left: 100px;">
<%= image_tag("image1.jpg", size: "100x100", alt: "Doctor Image") %>
</div>
<div style="display: inline-block; vertical-align: top; margin-left: 100px; margin-top: 50px;">
<%= link_to 'Book Now', "https://google.com",html_options = {:class =>"popupscreen"} %>
</div>
</div>
<% end %>
</div>

<script>
$('a.popupscreen').on('click', function(e) {
	window.open(this.href, "myWindow", 'width=800,height=600');
	window.close();
});
</script>